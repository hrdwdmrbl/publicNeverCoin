%ul{class: "nav navbar-nav navbar-right"}
  - if not current_user
    %li
      = link_to "Sign in", new_session_path(:user), class: "nav-link", style: "padding: 10px;"
    %li
      = link_to "Sign up", new_registration_path(:user), class: "nav-link", style: "padding: 10px;"
    - if controller_name == 'sessions' and not locals[:topbar]
      %li
        = link_to "Forgot your password?", new_password_path(:user), class: "nav-link", style: "padding: 10px;"
  - else
    %li
      = link_to "Sign Out", destroy_user_session_path, class: "nav-link", style: "padding: 10px;"