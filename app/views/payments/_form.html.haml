= form_for(@payment) do |f|
  - if @payment.errors.any?
    #error_explanation
      %h6
        = pluralize(@payment.errors.count, "error")
        prohibited this payment from being saved:
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :title, class: 'form-control', placeholder: 'Name of Product/Service'
    %br/
  .field
    = f.text_field :description, class: 'form-control', placeholder: 'Describe the item you bought'
    %br/
  .actions
    = f.submit "Update", class: "btn btn-primary btn-block"